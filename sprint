###
# puts the current scrum sprint week number combination

#!/usr/bin/env ruby

require 'date'

week = Time.now.to_date.cweek
next_week = 0

if week.odd?
  next_week = week + 1
else
  next_week = week
  week = week - 1
end

def format(number)
  sprintf("%02i", number)
end

puts "#{format(week)}_#{format(next_week)}"
exit 0
