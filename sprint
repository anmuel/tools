###
# puts the current scrum sprint week number combination

#!/usr/bin/envx^ ruby

require 'date'

week = Time.now.to_date.cweek
next_week = 0

if week.odd?
  next_week = week + 1
else
  next_week = week
  week = week - 1
end

def format(number)
  sprintf("%02i", number)
end

def release_version
  `git branch`.match(/r\d+\.\d(\.\.d)?/)
end

puts "#{release_version}-s#{format(week)}_#{format(next_week)}"
exit 0
